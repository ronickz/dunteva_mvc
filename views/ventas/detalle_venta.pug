extends ../layout/index


include ../mixins/cards/card

block contenido
        div(class="row mt-3")
        div(class="col-12 d-flex align-items-center header-dataTables")
            svg.bi.bi-box-seam-fill(xmlns='http://www.w3.org/2000/svg' width='48' height='48' fill='currentColor' viewbox='0 0 16 16')
              path(fill-rule='evenodd' d='M15.528 2.973a.75.75 0 0 1 .472.696v8.662a.75.75 0 0 1-.472.696l-7.25 2.9a.75.75 0 0 1-.557 0l-7.25-2.9A.75.75 0 0 1 0 12.331V3.669a.75.75 0 0 1 .471-.696L7.443.184l.01-.003.268-.108a.75.75 0 0 1 .558 0l.269.108.01.003zM10.404 2 4.25 4.461 1.846 3.5 1 3.839v.4l6.5 2.6v7.922l.5.2.5-.2V6.84l6.5-2.6v-.4l-.846-.339L8 5.961 5.596 5l6.154-2.461z')
            h2(class="mx-2 fw-light") Detalle de Venta 
            span(class="h2") #{id}
        div(class="row mt-2")
          div(class="col")
            .card(class="p-4")
              .card-body
                h5.card-title.fw-bold Informacion de la Venta
                div(class="row")
                 div(class="col-6")
                    div()
                      h6(class="card-subtitle text-muted") Id de Venta
                      p.card-text #{id}
                    div(class="mt-3")
                      h6(class="card-subtitle text-muted") Fecha de Venta
                      p.card-text #{fecha} 
                 div(class="col-6")
                    div()
                      h6(class="card-subtitle text-muted") Total de Venta
                      p.card-text.fw-bold $#{total}
                    div(class="mt-3")
                      h6(class="card-subtitle text-muted") Estado de Venta
                      p(class=`card-text fw-bold d-inline-block p-2 rounded ${
                        estado === "Completada" ? "bg-custom-green" : estado === "Pendiente" ? "bg-warning" : "bg-danger"
                      }`) #{estado}
          div(class="col")
            .card(class="p-4")
              .card-body
                h5.card-title.fw-bold Informacion del Cliente
                div(class="row")
                 div(class="col-6")
                    div()
                      h6(class="card-subtitle text-muted") Nombre
                      p.card-text Gustavo Perez
                    div()
                      h6(class="card-subtitle text-muted mt-3") Numero de Telefono
                      p.card-text +57 300 123 4567
                 div(class="col-6")
                    div()
                      h6(class="card-subtitle text-muted") Email
                      p.card-text gustavo@dunteva.com
        
        div(class="row mt-2")
          div(id="detalleVentas" class="table-responsive")
              h2 Items
              table.table.mt-3
                thead
                  tr
                    th(scope='col') SKU
                    th(scope='col') Nombre
                    th(scope='col') Cantidad
                    th(scope='col') Precio Unitario
                    th(scope='col') Total
                tbody
                  //Recorrer la lista
                  each venta in ventas
                    tr
                      td #{venta.sku}
                      td #{venta.nombreProducto}
                      td #{venta.cantidad}
                      td $#{venta.precio_unitario}
                      td $#{venta.subTotal}
                tfoot 
                  tr.fw-bold.fs-6
                    th(scope='row') Total
                    td(colspan='3') 
                    td $#{total}

