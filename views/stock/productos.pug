extends ../layout/index

include ../mixins/cards/card
include ../mixins/modal/modalProducto
include ../mixins/spinner/spinner


block contenido

    +modalProducto()

    div(class="row mt-3 justify-content-around gap-3")
        +card("col-sm-12 col-md-3","bg-custom-green","Productos activos",productosAltoStock)
        +card("col-sm-12 col-md-3","bg-custom-danger","Productos sin stock",productosBajoStock)
        +card("col-sm-12 col-md-3","bg-custom-primary","Productos vendidos",0)
    hr
    div(class="row mt-3")
        div(class="col-12 d-flex align-items-center header-dataTables")
            svg.bi.bi-box-seam-fill(xmlns='http://www.w3.org/2000/svg' width='48' height='48' fill='currentColor' viewbox='0 0 16 16')
              path(fill-rule='evenodd' d='M15.528 2.973a.75.75 0 0 1 .472.696v8.662a.75.75 0 0 1-.472.696l-7.25 2.9a.75.75 0 0 1-.557 0l-7.25-2.9A.75.75 0 0 1 0 12.331V3.669a.75.75 0 0 1 .471-.696L7.443.184l.01-.003.268-.108a.75.75 0 0 1 .558 0l.269.108.01.003zM10.404 2 4.25 4.461 1.846 3.5 1 3.839v.4l6.5 2.6v7.922l.5.2.5-.2V6.84l6.5-2.6v-.4l-.846-.339L8 5.961 5.596 5l6.154-2.461z')
            h2(class="mx-2 fw-light") Lista de productos
    div(class="row")
      .table-responsive.rounded.py-4.rounded-2
        table#productos(class="col table table-striped table-hover table-sm")
                 thead
                   tr(class="")
                     th Imagen
                     th SKU  
                     th Nombre
                     th Marca
                     th Categoria
                     th Capacidad
                     th Precio
                     th Stock
                     th Proveedor
                     th Fecha
                 tbody